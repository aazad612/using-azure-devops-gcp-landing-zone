@startuml
skinparam packageStyle rectangle
skinparam defaultTextAlignment left
top to bottom direction

' === Org root ===
rectangle "Org: acme-healthcare-org (1234567890)" as ORG

' === Top-level folders ===
package "fd-shared-services" as F_SHARED {
  [prj-shared-network]
  [prj-central-logging]
  [prj-security-tooling]
}

package "fd-healthcare-platform" as F_HC
package "fd-business-units"     as F_BU
package "fd-sandboxes"          as F_SBX

' Org → top folders
ORG --> F_SHARED
ORG --> F_HC
ORG --> F_BU
ORG --> F_SBX


' === Healthcare platform subfolders ===
package "fd-data-engineering" as F_DE {
  [prj-de-synthea-dev]
  [prj-de-synthea-qa]
  [prj-de-synthea-prod]
}

